@using YasinFinal.ViewModels;
@model LoginVM

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Login</h4>
                
                <form class="forms-sample" method="post" >
                    <div class="form-group">
                        <label asp-for="UsernameorEmail">Username</label>
                        <input asp-for="UsernameorEmail" class="form-control" placeholder="UsernameorEmail">
                        <span asp-validation-for="UsernameorEmail"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Position</label>
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div>
                        <label asp-for="RememberMe">RememberMe</label>
                        <input asp-for="RememberMe" class="form-control" placeholder="RememberMe">
                        <span asp-validation-for="RememberMe"></span>
                    </div>
                   <div asp-validation-summary="ModelOnly" class="text-danger">

                   </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>