@model List<Team>
<div class="content-wrapper w-100">
    <div class="row">

        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <a asp-action="create" asp-controller="team" class="btn btn-success">Create</a>
                   
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                   
                                    <th>
                                       Name
                                    </th>
                                    <th>
                                      Positions
                                    </th>
                                    <th>
                                      Image
                                    </th>
                                    <th>
                                        Deadline
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                             @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                           @item.Name
                                        </td>
                                        <td>
                                           @item.Position
                                        </td>
                                      
                                        <td>
                                          <img src="~/assets/img/@item.Image" />
                                        </td>

                                        <td>

                                            <a asp-action="update" asp-controller="team" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                            <a asp-action="delete" asp-controller="team" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                            <a asp-action="update" asp-controller="team" asp-route-id="@item.Id"  class="btn btn-primary">Read</a>
                                        </td> 
                                    </tr>
                                }
                            
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>